<body>
    <div class="container">
        <h1>Tus Reservas</h1>

        <div id="reservas-container">
            <!-- Aquí se insertará el contenido dinámico -->
            <% if (reservas.length > 0) { %>
                <ul>
                    <% reservas.forEach(reserva => { %>
                        <li>
                            <h3>Evento: <%= reserva.tipo_evento %></h3>
                            <p>Salón: <%= reserva.salon.name %></p>
                            <p>Fecha: <%= reserva.hora_inicio.toLocaleDateString() %></p>
                            <p>Hora: <%= reserva.hora_inicio.toLocaleTimeString() %> - <%= reserva.hora_fin.toLocaleTimeString() %></p>
                            <p>Estado: <%= reserva.estado %></p>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No tienes reservas.</p>
            <% } %>
        </div>
