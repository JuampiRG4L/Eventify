// Vista de perfil de usuario

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Perfil de Usuario</title>
  <link rel="stylesheet" href="/Public/CSS/styles.css">
</head>
<body>
  <div class="profile-container">
    <h1>Perfil de Usuario</h1>

    <form action="/update-profile" method="POST">
      <label for="nombre">Nombre:</label>
      <input type="text" id="nombre" name="nombre" value="<%= User.nombre %>" required>

      <label for="correo">Correo electrónico:</label>
      <input type="email" id="correo" name="correo" value="<%= User.correo %>" required>

      <button type="submit">Actualizar Perfil</button>
    </form>

    <form action="/delete-profile" method="POST">
      <button type="submit" onclick="return confirm('¿Estás seguro de que deseas eliminar tu cuenta?')">Eliminar Cuenta</button>
    </form>
  </div>
</body>
</html>