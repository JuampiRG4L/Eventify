// vista para el perfil del administrador
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Perfil de Administrador</title>
</head>
<body>
  <div class="profile-container">
    <h1>Perfil de Administrador</h1>

    <form action="/admin/update-profile" method="POST">
      <label for="nombre">Nombre:</label>
      <input type="text" id="nombre" name="nombre" value="<%= admin.nombre %>" required>

      <label for="correo">Correo electrónico:</label>
      <input type="email" id="correo" name="correo" value="<%= admin.correo %>" required>

      <button type="submit">Actualizar Perfil</button>
    </form>

    <form action="/admin/delete-profile" method="POST">
      <button type="submit" onclick="return confirm('¿Estás seguro de que deseas eliminar tu cuenta?')">Eliminar Cuenta</button>
    </form>
  </div>
</body>
</html>
